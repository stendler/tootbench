<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd}T%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
    </encoder>
  </appender>
  <timestamp key="timestamp" datePattern="yyyyMMdd-HHmmss"/>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>tootbench.log.gz</file>>
    <encoder>
      <pattern>%d{yyyy-MM-dd}T%d{HH:mm:ss.SSS} %msg%n</pattern>
    </encoder>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="tootbench.TootLoggingHandler" level="TRACE" additivity="false">
    <appender-ref ref="FILE" />
  </logger>
</configuration>
